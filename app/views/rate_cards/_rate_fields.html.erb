<div class="nested-fields">
  <div class="form-group row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <%= f.text_field :rate, class: 'form-control form-control-lg form-control-solid', placeholder:"Enter rate of interest"%>
      <span class="form-text text-muted">Please enter your rate card name</span>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :days, class: 'form-control form-control-lg form-control-solid', placeholder:"Number of days"%>
      <span class="form-text text-muted">Please enter your number of days</span>
    </div>
      <%= link_to_remove_association f, class: "btn font-weight-bold  btn-icon" do %>
        <i class="la la-remove"></i>
      <% end %>
  </div>
</div>
