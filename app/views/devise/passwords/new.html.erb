<!--begin::Forgot-->
<div class="d-flex flex-column flex-root">
	<!--begin::Login-->
	<div class="login login-3 wizard d-flex flex-column flex-lg-row flex-column-fluid">
		<!--begin::Aside-->
		<div class="login-aside d-flex flex-column flex-row-auto">
			<!--begin::Aside Top-->
			<div class="d-flex flex-column-auto flex-column py-lg-20 py-10 mb-20">
				<!--begin::Aside header-->
				<a href="#" class="login-logo text-center pt-lg-10 pb-10">
					<%= image_tag "megapop-logo.svg", alt: "logo", class: "h-60px"%>
				</a>
				<!--end::Aside header-->
				<!--begin::Aside Title-->
				<h3 class="font-weight-bolder text-center font-size-h4 text-dark-50 line-height-xl">User Experience &amp; Interface Design
				<br />Strategy SaaS Solutions</h3>
				<!--end::Aside Title-->
			</div>
			<!--end::Aside Top-->
			<!--begin::Aside Bottom-->
			<div class="d-flex flex-row-fluid bgi-no-repeat bgi-position-x-center bgi-size-contain" style="background-image: url(assets/media/svg/illustrations/accomplishment.svg)"></div>
			<!--end::Aside Bottom-->
		</div>
		<!--begin::Aside-->
		<!--begin::Content-->
		<div class="login-content flex-column-fluid d-flex flex-column p-10">
			<!--begin::Top-->
			<div class="text-right d-flex justify-content-center">
				<div class="top-forgot text-right d-flex justify-content-end pt-5 pb-lg-0 pb-10">
					<span class="font-weight-bold text-muted font-size-h4">Having issues?</span>
					<a href="javascript:;" class="font-weight-bold text-primary font-size-h4 ml-2" id="kt_login_signup">Get Help</a>
				</div>
			</div>
			<!--end::Top-->
			<!--begin::Wrapper-->
			<div class="d-flex flex-row-fluid flex-center">
				<!--begin::Forgot-->
				<div class="login-form">
					<!--begin::Form-->
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: 'kt_login_forgot_form' }) do |f| %>
						<!--begin::Title-->
						<div class="pb-5 pb-lg-15">
							<h3 class="font-weight-bolder text-dark font-size-h2 font-size-h1-lg">Forgotten Password ?</h3>
							<p class="text-muted font-weight-bold font-size-h4">Enter your email to reset your password</p>
						</div>
						<!--end::Title-->
						<%= render "devise/shared/error_messages", resource: resource %>
						<!--begin::Form group-->
						<div class="form-group">
							<%= f.email_field :email, autofocus: true, class: "form-control h-auto py-6 border-0 rounded-lg font-size-h6" %>
						</div>
						<!--end::Form group-->
						<!--begin::Form group-->
						<div class="form-group d-flex flex-wrap">
							<button type="submit" id="kt_login_forgot_form_submit_button" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-4">Submit</button>
							<a href="<%= new_session_path(resource_name) %>" id="kt_login_forgot_cancel" class="btn btn-light-primary font-weight-bolder font-size-h6 px-8 py-4 my-3">Cancel</a>
						</div>
						<!--end::Form group-->
					<% end %>
					<!--end::Form-->
				</div>
				<!--end::Forgot-->
			</div>
			<!--end::Wrapper-->
		</div>
		<!--end::Content-->
	</div>
	<!--end::Login-->
</div>