<!--begin::Login-->
<div class="login login-3 wizard d-flex flex-column flex-lg-row flex-column-fluid">
  <!--begin::Aside-->
  <div class="login-aside d-flex flex-column flex-row-auto">
    <!--begin::Aside Top-->
    <div class="d-flex flex-column-auto flex-column py-lg-20 py-10 mb-20">
      <!--begin::Aside header-->
      <%= link_to "#", class: "login-logo text-center pt-lg-10 pb-10" do %>
      <%= image_tag "megapop-logo.svg", alt: "logo", class: "h-60px"%>
      <% end %>
      <!--end::Aside header-->
      <!--begin::Aside Title-->
      <h3 class="font-weight-bolder text-center font-size-h4 text-dark-50 line-height-xl">Influencers Get Paid
        <br />Now With PayPop in as little as 24 hours
      </h3>
      <!--end::Aside Title-->
    </div>
    <!--end::Aside Top-->
    <!--begin::Aside Bottom-->
    <div class="d-flex flex-row-fluid bgi-no-repeat bgi-position-x-center bgi-size-contain" style="background-image: url(assets/media/svg/illustrations/accomplishment.svg)"></div>
    <!--end::Aside Bottom-->
  </div>
  <!--begin::Aside-->
  <!--begin::Content-->
  <div class="login-content flex-row-fluid d-flex flex-column p-10">
    <!--begin::Top-->
    <div class="text-right d-flex justify-content-center">
      <div class="top-signin text-right d-flex justify-content-end pt-5 pb-lg-0 pb-10">
        <span class="font-weight-bold text-muted font-size-h4">Having issues?</span>
        <a href="javascript:;" class="font-weight-bold text-primary font-size-h4 ml-2" id="kt_login_signup">Get Help</a>
      </div>
    </div>
    <!--end::Top-->
    <!--begin::Wrapper-->
    <div class="d-flex flex-row-fluid flex-center">
      <!--begin::Signin-->
      <div class="login-form">
        <!--begin::Form-->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form', id: 'kt_login_singin_form' } ) do |f| %>
          <!--begin::Title-->
          <div class="pb-5 pb-lg-15">
            <h3 class="font-weight-bolder text-dark font-size-h2 font-size-h1-lg">Sign In</h3>
            <div class="text-muted font-weight-bold font-size-h4">New Here?
              <a href="<%=  new_registration_path(resource_name) %>" class="text-primary font-weight-bolder">Create Account</a>
            </div>
          </div>
          <!--begin::Title-->
          <%= render 'shared/flash' %>
          <!--begin::Form group-->
          <div class="form-group">
            <label class="font-size-h6 font-weight-bolder text-dark">Your Email</label>
            <%= f.email_field :email, autofocus: true, class: "form-control h-auto py-6 rounded-lg border-0" %>
          </div>
          <!--end::Form group-->
          <!--begin::Form group-->
          <div class="form-group">
            <div class="d-flex justify-content-between mt-n5">
              <label class="font-size-h6 font-weight-bolder text-dark pt-5">Your Password</label>
              <a href="<%= new_password_path(resource_name) %>" class="text-primary font-size-h6 font-weight-bolder text-hover-primary pt-5">Forgot Password ?</a>
            </div>
            <%= f.password_field :password, class: "form-control h-auto py-6 rounded-lg border-0" %>
          </div>
          <!--end::Form group-->
          <!--begin::Action-->
          <div class="pb-lg-0 pb-5">
            <button type="submit" id="kt_login_singin_form_submit_button" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3">Sign In</button>
          </div>
          <!--end::Action-->
        <% end %>
        <!--end::Form-->
      </div>
      <!--end::Signin-->
    </div>
    <!--end::Wrapper-->
  </div>
  <!--end::Content-->
</div>
<!--end::Login-->